<UserControl x:Class="AppMMCV.View.HRM.Canteen_MealDistributionUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppMMCV.View.HRM"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid Rows="2" Columns="2">
        
        <GroupBox Header="Số lượng lũy kế" Margin="2">
            <TextBlock Text="0" FontSize="150" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
        </GroupBox>
        
        <GroupBox Header="Kết quả quẹt thẻ" Margin="2">
            <TextBlock Text="OK / NG" FontSize="150" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <Trigger Property="Text" Value="OK">
                                <Setter Property="Foreground" Value="Blue"/>
                            </Trigger>

                            <Trigger Property="Text" Value="NG">
                                <Setter Property="Foreground" Value="Red"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </GroupBox>
        
        <GroupBox Header="Thông tin thẻ" Margin="2">
            <UniformGrid Columns="1" Rows="3">
                <TextBox IsReadOnly="False" materialDesign:HintAssist.Hint="ID Thẻ" FontSize="25" Style="{StaticResource MaterialDesignFilledTextBox}" Margin="2"/>
                <TextBox IsReadOnly="True" materialDesign:HintAssist.Hint="Mã nhân viên" FontSize="25" Style="{StaticResource MaterialDesignFilledTextBox}" Margin="2"/>
                <TextBox IsReadOnly="True" materialDesign:HintAssist.Hint="Họ tên" FontSize="25" Style="{StaticResource MaterialDesignFilledTextBox}" Margin="2"/>
                             
            </UniformGrid>
            
        </GroupBox>
        <GroupBox Header="Mô tả chi tiết nếu  kết quả thẻ trả về NG" Margin="2">
            <TextBox IsReadOnly="True" materialDesign:HintAssist.Hint="Thông báo" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
        </GroupBox>
    </UniformGrid>
</UserControl>
